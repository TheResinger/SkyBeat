{{> headerlogin}}
<section class="pb_cover_v3 overflow-hidden cover-bg-opacity text-left" id="section-home">
    <div class="container">
        {{> messages}}
        <div class="row align-items-center justify-content-center">
            <div class="col-md-6">
                <h2 class="heading text-white mb-3">SkyBeat</h2>
                <div class="sub-heading">
                    <p class="mb-4 text-white">The new social media for music enthuasists.</p>
                </div>
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-md-5 relative align-self-center user-form" style="border: 1px solid black; padding-left: 0px; padding-right: 0px;">
                <form action="register" class="bg-white pb_form_v1" method="POST">
                    <h2 class="mb-4 mt-0 text-center">Sign Up for Free</h2>
                    <input type="text" name="username" placeholder="Username" />
                    <input type="email" name="email" placeholder="Email Address" />
                    <input type="password" name="password" placeholder="Password" />
                    <input type="submit" />
                </form>

            </div>
        </div>
    </div>
</section>